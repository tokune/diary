doctype html
html
  head
    title BB日记
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="http://cdn.bootcss.com/bootstrap/3.2.0/css/bootstrap.min.css", rel="stylesheet")
    script(src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js")
    script(src="http://cdn.bootcss.com/bootstrap/3.2.0/js/bootstrap.min.js")
    block head

  body
    .navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") BB日记
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class="#{cur === 'list' ? 'active' : ''}")
              a(href="/diaries/") 日记列表
            li(class="#{cur === 'new' ? 'active' : ''}")
              a(href="/diary/new/") 新建日记
            li(class="#{cur === 'about' ? 'active' : ''}")
              a(href="/about/") 关于
    block body
